<ol reversed class="postlist" style="counter-reset: start-from {{ noteslist.length + 1 }}">
{% for note in noteslist | reverse %}
  <li class="postlist-item{% if note.url == url %} postlist-item-active{% endif %}">
    <a href="{{ note.url | url }}" class="postlist-link">{% if note.data.title %}{{ note.data.title }}{% else %}<code>{{ note.url }}</code>{% endif %}</a>
    <time class="postlist-date" datetime="{{ note.date | htmlDateString }}">{{ note.date | readableDate }}</time>
    {% for tag in note.data.tags %}
      {%- if tag != "notes" -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
  </li>
{% endfor %}
</ol>
